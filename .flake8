[flake8]
ignore = 
    # D100: Missing docstring in public module
    D100,
    # D103: Missing docstring in public function
    D103,
    # E501: line too long (82 > 79 characters)
    E501

exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
max-complexity = 10